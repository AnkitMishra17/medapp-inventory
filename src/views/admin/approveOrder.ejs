<%- include("../partials/header.ejs") %>
<link rel="stylesheet" href="/bootstrap.min.css">
<div style="background-image: linear-gradient(to top, #fbc2eb 0%, #a6c1ee 100%); min-height:100vh;">
  <div class="container p-5 animated fadeIn slow">
    <div class="card">
      <div class="card-header">
        <div class="card-title">
          <div class="mt-3" align="center">
            <p style="font-size:30px;" class="font-weight-bold">Approve Order</p>
          </div>
        </div>
        <a class="btn btn-primary m-2 float-right" href="/medapp-inventory-admin/logout">Logout</a>
        <a class="btn btn-primary m-2 float-right" href="/medapp-inventory-admin/dashboard">Dashboard</a>
        <a class="btn btn-primary m-2 float-right" href="/medapp-inventory-admin/orders">Orders</a>
      </div>
      <div class="card-body">
        <form action="/medapp-inventory-admin/orders/approve?id=<%= order._id %>" method="post">
            <div class="form-group">
              <label for="product">Product</label>
              <input type="text" class="form-control" value="<%= order.product.name %>" disabled>
            </div>
            <div class="form-group">
              <label for="quantity">Quantity</label>
              <input type="number" class="form-control" value="<%= order.quantity %>" disabled>
            </div>
            <div class="form-group">
              <label for="date">Date Of Order</label>
              <input type="text" class="form-control" value="<%= order.createdAt.toDateString() %>" disabled>
            </div>
            <div class="form-group">
              <label for="vendor">Select Vendor</label>
              <select class="form-control" name="vend">
                <option value="" selected disabled>Choose vendor</option>
                <% if(vendors.length > 0) { %>
                  <% vendors.forEach((vendor) => { %>
                    <option value="<%= vendor._id %>" <% if(vendor._id == vend) { %>selected<% } %>><%= vendor.name %> - <%= vendor.location.city %>, <%= vendor.location.state %></option>
                  <% }) %>
                <% } %>
              </select>
            </div>
            <div align="center">
              <button type="submit" class="btn btn-primary mt-3" style="width:120px;">Submit</button>
          </div>
        </form>
      </div>
    </div>
  </div>
<%- include("../partials/footer.ejs") %>