<%- include("../partials/header.ejs") %>
<link rel="stylesheet" href="/bootstrap.min.css">
  <div class="container p-4">
    <div class="card p-3" >
      <div class="card-header" >
        <div class="card-title">
          <div class="mt-3" align="center">
            <p style="font-size:30px;" class="font-weight-bold">Inventory</p>
          </div>
        </div>
        <a class="btn btn-primary float-right m-2" href="/supervisor/logout">Logout</a>
        <a class="btn btn-primary float-right m-2" href="/supervisor/dashboard">Dashboard</a> 
      </div>
    <% if(items.length > 0) { %>
        <div class="card m-3">
            <div class="card-header">
              Inventory
            </div>
            <div class="card-body">
              <div class="table-responsive">
              <table class="table table-hover text-center">
                <thead>
                    <tr class="table-primary">
                      <th scope="col">Product</th>
                      <th scope="col">Quantity</th>
                      <th scope="col">Update</th>
                      <th scope="col">View history</th>
                    </tr> 
                </thead>
                <tbody>
            <% items.forEach((item) => { %>
              <tr>
                <td><%= item.product.name %></td>
                <td><%= item.leftQuantity %></td>
                <td><a href="/supervisor/inventory/update?id=<%= item._id %>">Update</a></td>
                <td><a href="/supervisor/inventory/history?id=<%= item._id %>">View</a></td>
              </tr>
            <% }) %>
                </tbody>
              </table>
              </div>
            </div>
          </div>
        <% } else { %>
          <div class="jumbotron text-muted text-center m-2">
            Nothing to show!
          </div>
        <% } %>
    </div>
    </div>
  </div>
<%- include("../partials/footer.ejs") %>
