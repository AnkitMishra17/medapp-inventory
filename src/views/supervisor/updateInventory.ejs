<%- include("../partials/header.ejs") %>
<link rel="stylesheet" href="/bootstrap.min.css">
<div style="background-image: linear-gradient(45deg,#334d50,#cbcaa5); min-height:100vh;">
  <div class="container p-5">
    <div class="card bg-light mb-3" style="max-width: 60rem;">
      <div class="card-header">
        <h2 class="display-5">Update Inventory <a class="btn btn-outline-primary float-right" href="/supervisor/dashboard">Dashboard</a> <a class="btn btn-outline-primary float-right" href="/supervisor/inventory">Inventory</a> <a class="btn btn-outline-primary float-right" href="/supervisor/logout">Logout</a></h2>
      </div>
      <div class="card-body">
        <form action="/supervisor/inventory/update?id=<%= item._id %>" class="col-xs-7 col-lg-6 form-container" method="post">
            <div class="form-group">
              <label for="product">Product</label>
              <input type="text" class="form-control" name="product" value="<%= item.product.name %>" disabled required>
            </div>
            <div class="form-group">
              <label for="left">Available Quantity</label>
              <input type="number" class="form-control" name="left" value="<%= item.leftQuantity %>" disabled required>
            </div>
            <div class="form-group">
              <label for="quantity">Used Quantity</label>
              <input type="number" class="form-control" name="quantity" placeholder="Enter used quantity" required>
            </div>
            <div class="form-group">
              <label for="detail">Details</label>
              <input type="text" class="form-control" name="detail" placeholder="Enter detail" required>
            </div>
            <button type="submit" class="btn btn-outline-primary">Submit</button>
        </form>
      </div>
    </div>
  </div>
</div>
<%- include("../partials/footer.ejs") %>
