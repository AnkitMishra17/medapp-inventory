<%- include("../partials/header.ejs") %>
<div style="background-image: linear-gradient(45deg,#334d50,#cbcaa5); min-height:100vh;">
  <div class="container p-5">
    <div class="card bg-light mb-3" style="max-width: 60rem;">
      <div class="card-header">
        <h2 class="display-5">Place new order <a class="btn btn-outline-primary float-right" href="/supervisor/dashboard">Dashboard</a></h2>
      </div>
      <div class="card-body">
        <form action="/supervisor/orders/new" class="col-xs-7 col-lg-6 form-container" method="post" novalidate>
            <div class="form-group">
              <label for="product">Product</label>
              <select class="form-control" name="product" required>
                  <option value="" disabled selected>Choose product</option>
                  <% products.forEach((prod) => { %>
                    <option value="<%= prod._id %>" <% if(prod._id == product) { %>selected<% } %> ><%= prod.name %></option>
                  <% }) %>
              </select>
            </div>
            <div class="form-group">
              <label for="quantity">Quantity</label>
              <input type="number" class="form-control" name="quantity" placeholder="Enter quantity" value="<%= quantity %>" required>
            </div>
            <button type="submit" class="btn btn-outline-primary">Submit</button>
        </form>
      </div>
    </div>
  </div>
</div>
<%- include("../partials/footer.ejs") %>
