<%- include("../partials/header.ejs") %>
  <link rel="stylesheet" href="/styles1.css">
  <link rel="stylesheet" href="/bootstrap.min.css">
    <div class="container p-5 animated fadeIn">
      <div class="card">
        <div class="card-header">
          <div class="card-title">
              <div class="mt-3" align="center">
                  <p style="font-size:25px;" class="font-weight-bold">Supervisor Registration </p>
              </div>
            </div>
            <a class="btn btn-outline-primary float-right" href="/supervisor/login">Login</a>
            <a class="btn btn-outline-primary float-right" href="/">Home</a>         
        </div>
        <div class="card-body animated bounceInDown delay-1s">
          <form action="/supervisor/register" method="post">
              <div class="form-group">
                <label for="name" style="font-size:20px;">Name</label>
                <input type="text" class="form-control text-dark" name="name" placeholder="Enter name" value="<%= name %>" required>
              </div>
              <div class="form-group">
                <label for="email" style="font-size:20px;">Email address</label>
                <input type="email" class="form-control text-dark" name="email" placeholder="Enter email" value="<%= email %>" required>
              </div>
              <div class="form-group">
                <label for="location" style="font-size:20px;">Select Location</label>
                <select class="form-control text-dark" name="locId">
                  <option value="" disabled selected>Choose your location</option>
                  <% if(locations.length > 0) { %>
                    <% locations.forEach((location) => { %>
                      <option value="<%= location._id %>" <% if(location._id == locId) { %>selected<% } %>><%= location.city %>, <%= location.state %></option>
                    <% }) %>
                  <% } %>
                </select>
              </div>
              <div class="form-group">
                <label for="password" style="font-size:20px;">Password</label>
                <input type="password" class="form-control text-dark" name="password" placeholder="Password" required>
              </div>
              <div class="form-group">
                <label for="confPassword" style="font-size:20px;">Confirm Password</label>
                <input type="password" class="form-control text-dark" name="confPassword" placeholder="Password" required>
              </div>
              <div align="center">
              <button type="submit" class="btn btn-primary mt-3" style="width: 120px;">Submit</button>
            </div>
          </form>
        </div>
      </div>
    </div>
  <%- include("../partials/footer.ejs") %>